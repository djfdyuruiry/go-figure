<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             x:Class="GoFigure.App.Views.Controls.GameView"
             d:DesignWidth="800"
             d:DesignHeight="300"
             Background="White">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="0.9*"/>
      <ColumnDefinition Width="0.12*"/>
    </Grid.ColumnDefinitions>

    <Grid Grid.Column="0">
      <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
      </Grid.RowDefinitions>

      <ContentControl x:Name="Status" Grid.Row="0"/>

      <ContentControl x:Name="Solution" Grid.Row="1"/>

      <ContentControl x:Name="Controls" Grid.Row="2"/>
    </Grid>

    <ContentControl x:Name="LevelMeter" Grid.Column="1"/>
  </Grid>
</UserControl>
